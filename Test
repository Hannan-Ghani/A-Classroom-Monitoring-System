const fs = require('fs');
const { diffString } = require('json-diff');

// Function to read JSON data from a file
const readJsonFromFile = (filePath) => {
  try {
    const fileContent = fs.readFileSync(filePath, 'utf8');
    return JSON.parse(fileContent);
  } catch (error) {
    console.error(`Error reading JSON file ${filePath}:`, error);
    process.exit(1);
  }
};

// Function to write HTML content to a file
const writeHtmlToFile = (htmlContent, filePath) => {
  try {
    fs.writeFileSync(filePath, htmlContent, 'utf8');
    console.log(`HTML output written to ${filePath}`);
  } catch (error) {
    console.error(`Error writing HTML file ${filePath}:`, error);
    process.exit(1);
  }
};

// Function to generate an HTML page with colored diff output
const generateHtmlDiffPage = (oldJson, newJson) => {
  const diffOutput = diffString(oldJson, newJson);
  const htmlContent = `
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>JSON Diff Output</title>
  <style>
    .diff { white-space: pre; font-family: monospace; }
    .d2h-ins { background-color: #e6ffe6; }
    .d2h-del { background-color: #ffeef0; }
  </style>
</head>
<body>
  <div class="diff">${diffOutput}</div>
</body>
</html>
`;
  return htmlContent;
};

// Main script
const oldJson = readJsonFromFile('oldData.json');
const newJson = readJsonFromFile('newData.json');
const htmlDiffPage = generateHtmlDiffPage(oldJson, newJson);

writeHtmlToFile(htmlDiffPage, 'diffOutput.html');
