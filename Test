const fs = require('fs');
const diff = require('deep-diff').diff;

// Function to read JSON data from a file
const readJsonFromFile = (filePath) => {
  try {
    return JSON.parse(fs.readFileSync(filePath, 'utf8'));
  } catch (error) {
    console.error(`Error reading JSON file ${filePath}:`, error);
    process.exit(1);
  }
};

// Function to generate HTML content for side-by-side comparison
const generateComparisonHtml = (oldJson, newJson, differences) => {
  // Convert JSON objects to formatted strings for display
  const oldJsonString = JSON.stringify(oldJson, null, 2).split('\n');
  const newJsonString = JSON.stringify(newJson, null, 2).split('\n');

  // Start HTML content
  let htmlContent = `
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>JSON Comparison</title>
  <style>
    body { font-family: sans-serif; }
    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 5px; border: 1px solid #ddd; }
    .old { background-color: #ffdddd; }
    .new { background-color: #ddffdd; }
    .unchanged { background-color: #f7f7f7; }
  </style>
</head>
<body>
  <table>
    <thead>
      <tr>
        <th>Original JSON</th>
        <th>Modified JSON</th>
      </tr>
    </thead>
    <tbody>
`;

  // Generate table rows
  oldJsonString.forEach((line, index) => {
    const oldLine = line.trim();
    const newLine = newJsonString[index] ? newJsonString[index].trim() : '';
    const lineDiff = diff(JSON.parse(oldLine), JSON.parse(newLine));
    const className = lineDiff ? (lineDiff.kind === 'E' ? 'old' : 'new') : 'unchanged';

    htmlContent += `
      <tr>
        <td class="${className}">${oldLine}</td>
        <td class="${className}">${newLine}</td>
      </tr>
    `;
  });

  // End HTML content
  htmlContent += `
    </tbody>
  </table>
</body>
</html>
`;

  return htmlContent;
};

// Main script
const oldJson = readJsonFromFile('oldData.json'); // Replace with your actual file path
const newJson = readJsonFromFile('newData.json'); // Replace with your actual file path
const differences = diff(oldJson, newJson);

const htmlContent = generateComparisonHtml(oldJson, newJson, differences);
fs.writeFileSync('comparison.html', htmlContent);
console.log('Comparison HTML file created successfully.');
