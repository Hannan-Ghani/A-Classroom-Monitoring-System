// Logs matched transaction IDs to an output file
def logTransactionIds(transactionIds: List[String], outputBasePath: String)(implicit spark: SparkSession): Unit = {
    import spark.implicits._

    // Convert list to DataFrame for writing to S3
    val outputPath = s"$outputBasePath/matched_transaction_ids"
    val transactionIdsDF = transactionIds.toDF("MatchedTransactionIDs")

    // Write the output file to S3 or the local filesystem
    transactionIdsDF.write.mode("overwrite").text(outputPath)
    println(s"Successfully wrote matched transaction IDs to $outputPath")
}