const express = require('express');
const fs = require('fs');
const { diff } = require('deep-diff');
const { html } = require('diff2html');
const app = express();
const port = 3000;

// Function to read JSON data from a file
const readJsonFromFile = (filePath) => {
  try {
    const fileContent = fs.readFileSync(filePath, 'utf8');
    return JSON.parse(fileContent);
  } catch (error) {
    console.error(`Error reading JSON file ${filePath}:`, error);
    process.exit(1);
  }
};

// Function to generate an HTML diff view
const generateDiffView = (oldJson, newJson) => {
  const differences = diff(oldJson, newJson);
  const diffJson = JSON.stringify(differences);
  const diffHtml = html(diffJson, { drawFileList: false });
  return diffHtml;
};

// Serve the HTML diff view
app.get('/', (req, res) => {
  const oldJson = readJsonFromFile('oldData.json');
  const newJson = readJsonFromFile('newData.json');
  const diffHtmlView = generateDiffView(oldJson, newJson);
  res.send(diffHtmlView);
});

// Start the server
app.listen(port, () => {
  console.log(`Server running at http://localhost:${port}`);
});
