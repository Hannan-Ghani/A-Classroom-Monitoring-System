def logTransactionIds(transactionIds: List[String], validationType: String, outputBasePath: String): Unit = {
    val outputFile = new File(s"${outputBasePath}/${validationType}_matched_ids.txt") // Updated file name
    val writer = new PrintWriter(outputFile)

    writer.write(s"$validationType Matched Transaction IDs:\n") // Updated message
    transactionIds.foreach(id => writer.write(s"$id\n"))
    writer.close()
}