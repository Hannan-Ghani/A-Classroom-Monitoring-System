from awsglue.context import GlueContext
from pyspark.context import SparkContext

# Initialize SparkContext with configuration
sc = SparkContext()
sc._jsc.hadoopConfiguration().set("spark.driver.maxResultSize", "4g")  # Set maxResultSize
glueContext = GlueContext(sc)

# Initialize Spark session
spark = glueContext.spark_session

# Example: Your processing logic
df = spark.read.json("s3://your-bucket/your-file.json")
df.show()