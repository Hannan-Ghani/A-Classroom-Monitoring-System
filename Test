const fs = require('fs');
const jsonDiff = require('json-diff'); // Make sure to install json-diff package

// Function to read JSON data from a file
const readJsonFromFile = (filePath) => {
  try {
    return JSON.parse(fs.readFileSync(filePath, 'utf8'));
  } catch (error) {
    console.error(`Error reading JSON file ${filePath}:`, error);
    process.exit(1);
  }
};

// Function to generate an HTML file with side-by-side JSON comparison
const generateDiffHtml = (oldJson, newJson) => {
  const diffResult = jsonDiff.diffString(oldJson, newJson, { color: false });
  const diffLines = diffResult.split('\n');

  // Start HTML content
  let htmlContent = `
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>JSON Diff</title>
  <style>
    body { font-family: sans-serif; }
    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 5px; border: 1px solid #ddd; }
    .added { background-color: #ddffdd; }
    .deleted { background-color: #ffdddd; }
    .unchanged { background-color: #f7f7f7; }
    .updated { background-color: #ffffdd; }
  </style>
</head>
<body>
  <table>
    <thead>
      <tr>
        <th>Original JSON</th>
        <th>Modified JSON</th>
      </tr>
    </thead>
    <tbody>
`;

  // Generate table rows
  diffLines.forEach((line) => {
    let className = 'unchanged';
    if (line.startsWith('+')) {
      className = 'added';
    } else if (line.startsWith('-')) {
      className = 'deleted';
    } else if (line.startsWith('~')) {
      className = 'updated';
    }

    htmlContent += `
      <tr>
        <td class="${className}">${line}</td>
      </tr>
    `;
  });

  // End HTML content
  htmlContent += `
    </tbody>
  </table>
</body>
</html>
`;

  return htmlContent;
};

// Main script
const oldJson = readJsonFromFile('oldData.json'); // Replace with your actual file path
const newJson = readJsonFromFile('newData.json'); // Replace with your actual file path
const diffHtml = generateDiffHtml(oldJson, newJson);

// Write the HTML content to a file
fs.writeFileSync('jsonDiff.html', diffHtml);
console.log('The JSON diff HTML file has been generated as jsonDiff.html');
