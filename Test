const fs = require('fs');
const diff = require('deep-diff').diff;
const { format } = require('diff2html');
const path = require('path');

// Function to read JSON data from a file
const readJsonFromFile = (filePath) => {
  try {
    const fileContent = fs.readFileSync(filePath, 'utf8');
    return JSON.parse(fileContent);
  } catch (error) {
    console.error(`Error reading JSON file ${filePath}:`, error);
    process.exit(1);
  }
};

// Function to generate an HTML diff view
const generateDiffView = (oldJson, newJson) => {
  const differences = diff(oldJson, newJson);
  const diffJson = JSON.stringify(differences, null, 2);
  const diffHtml = format(diffJson, { drawFileList: false });
  return diffHtml;
};

// Function to write the HTML content to a file
const writeHtmlToFile = (htmlContent, fileName) => {
  fs.writeFileSync(fileName, htmlContent, 'utf8');
  console.log(`The HTML file has been saved as ${fileName}`);
};

// Main script
const oldJson = readJsonFromFile('oldData.json');
const newJson = readJsonFromFile('newData.json');
const diffHtmlView = generateDiffView(oldJson, newJson);

const outputFileName = path.join(__dirname, 'jsonComparison.html');
writeHtmlToFile(diffHtmlView, outputFileName);
